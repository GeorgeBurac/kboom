apiVersion: batch/v1
kind: Job
metadata:
  name: kboom
spec:
  template:
    spec:
      serviceAccountName: kboom-sa
      containers:
      - name: kboom
        image: 661776721573.dkr.ecr.us-east-2.amazonaws.com/kboom:{{REVISION_ID}}
        command:
        - "/kboom"
        - "--mode=scale"
        - "--load=pods:3"
      restartPolicy: Never